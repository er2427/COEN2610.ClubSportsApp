<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.clubsportsappnew.ui.main_pages.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />
        <action
            android:id="@+id/action_nav_home"
            app:destination="@id/nav_home" />

    <fragment
        android:id="@+id/nav_favorites"
        android:name="com.example.clubsportsappnew.ui.main_pages.FavoritesFragment"
        android:label="Favorites" >
        <action
            android:id="@+id/action_nav_teams_to_nav_favorites"
            app:destination="@id/nav_favorites" />
    </fragment>

    <fragment
        android:id="@+id/directoryFragment"
        android:name="com.example.clubsportsappnew.ui.main_pages.DirectoryFragment"
        android:label="Directory" >
        <action
            android:id="@+id/action_nav_teams_to_directoryFragment"
            app:destination="@id/directoryFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_calendar"
        android:name="com.example.clubsportsappnew.ui.main_pages.CalendarFragment"
        android:label="Calendar" >
        <action
            android:id="@+id/action_nav_to_calendar"
            app:destination="@id/nav_calendar" />
    </fragment>

    <fragment
        android:id="@+id/nav_admin"
        android:name="com.example.clubsportsappnew.ui.account_info.Filter"
        android:label="Filter" >
        <action
            android:id="@+id/action_nav_to_filter"
            app:destination="@+id/nav_admin" />
    </fragment>

    <fragment
        android:id="@+id/nav_logout"
        android:name="com.example.clubsportsappnew.ui.main_pages.HomeFragment"
        android:label="Logout" >
        <action
            android:id="@+id/action_nav_to_logout"
            app:destination="@+id/nav_logout" />
    </fragment>

</navigation>